<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileAppProject"
             x:Class="MobileAppProject.MainPage">

    <StackLayout x:Name="ContentPage">
        <StackLayout x:Name="MainMenu" Margin="0,10,0,0" BackgroundColor="DarkGray" HorizontalOptions="CenterAndExpand" 
                     VerticalOptions="CenterAndExpand">
            <StackLayout x:Name="Sports" Orientation="Horizontal">
                <Button x:Name="SportsBtn" HorizontalOptions="FillAndExpand" Margin="0,10" CornerRadius="15" 
                        Text="Sports" BackgroundColor="Green" Clicked="SportsBtn_Clicked"/>
            </StackLayout>
            <StackLayout x:Name="Geography" Orientation="Horizontal">
                <Button x:Name="GeographyBtn" HorizontalOptions="FillAndExpand" Margin="0,10" CornerRadius="15" 
                        Text="Geography" BackgroundColor="Lavender" Clicked="GeographyBtn_Clicked"/>
            </StackLayout>
            <StackLayout x:Name="GenKnowledge" Orientation="Horizontal">
                <Button x:Name="GenKnowledgeBtn" HorizontalOptions="FillAndExpand" Margin="0,10" CornerRadius="15"   
                        Text="General Knowledge" BackgroundColor="Yellow" Clicked="GenKnowledgeBtn_Clicked"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
